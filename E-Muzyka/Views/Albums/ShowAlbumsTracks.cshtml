@model E_Muzyka.Pagination.PaginatedList<E_Muzyka.ModelDTO.TrackDTO>

@if (Model.Count > 0)
{
    <table class="table">
        <thead class="tableColor text-white">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].AlbumTitle)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlbumTitle)
                    </td>
                    <td>
                        <a class="btn buttonDetails text-white" asp-controller="Tracks" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="text-danger">Brak utworów</h1>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="ShowAlbumsTracks"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn buttonLogin text-white @prevDisabled">
    Poprzednia
</a>
<a asp-action="ShowAlbumsTracks"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn buttonLogin text-white @nextDisabled">
    Następna
</a>